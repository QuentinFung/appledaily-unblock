	"icons": { "128": "icon.png" },
	"version": "1.19",
	"content_scripts": [
		{
			"matches": [
				"*://*.appledaily.com/*",
				"*://*.appledaily.com.hk/*",
				"*://*.appledaily.com.tw/*",
				"*://*.nextmedia.com/*",
				"*://*.nextmag.com.tw/*",
